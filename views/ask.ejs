<%- include('partials/head.ejs') %>
  <body>
    <%- include('partials/navbar.ejs') %>
    <div class="container mt-5">
      <div class="card">
        <div class="card-header">
          <h3>Realizar pergunta</h3>
        </div>
        <div class="card-body">
          <form method="POST" action="saveask">
            <label>Titulo</label>
            <input 
              class="form-control mb-2" 
              type="text" 
              placeholder="Titulo" 
              name="title"
            >
            <label>Descrição</label>
            <textarea 
              class="form-control mb-2" 
              placeholder="Descreva sua pergunta aqui"
              name="description"
            ></textarea>
            <button class="btn btn-primary mb-2">Perguntar</button>
          </form>
        </div>
      </div>
    </div>

    <%- include('partials/scripts.ejs') %>
  </body>
</html>
